<div class="col-md-6 d-flex justify-content-center">
	<div class="card border-primary mt-3 w-100">
		<div class="card-header"><i class="fas fa-clipboard-list"></i> Url data</div>
		<div class="card-body text-primary">

			<% if(findUrl.length === 0) { %>
				<div class="alert alert-primary" role="alert">
					Actualmente No tiene Ninguna Url Asociada.
				</div>
			<% } %>

			<% findUrl.forEach(function(url){ %>
				<div class="border border-secondary rounded p-2 d-flex aling-items-center justify-content-between mb-2">
					<div class="ml-3 d-flex aling-items-center">
						<a target="_blank" class="text-info" href="<%= host %><%= url.path %>">
							<i class="fas fa-paperclip"></i> <%= url.path %>
						</a>

						<div class="ml-3 text-muted hover copiarTexto" text="<%= url.path %>" value="<%= host %><%= url.path %>">
							<i class="far fa-copy"></i>
						</div>
					</div>
					<div class="d-flex aling-items-center mr-3">
						<a href="/view/<%= url._id %>" class="text-success mr-2">
							<i class="far fa-eye"></i>
						</a>
						<a href="/edit/<%= url._id %>" class="text-info mr-2">
							<i class="fas fa-pencil-alt"></i>
						</a>
						<a id="delete" class="text-danger alerta" text="<%= url.path %>" value="<%= url._id %>">
							<i class="fas fa-trash-alt"></i>
						</a>
					</div>
				</div>
			<% }); %>

		</div>
	</div>
</div>

<script src="/js/sweetalert2.js"></script>
