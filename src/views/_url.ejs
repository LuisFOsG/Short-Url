<div class="col-md-6 d-flex justify-content-center">
	<div class="card border-primary mt-3 w-100">
		<div class="card-header"><i class="fas fa-clipboard-list"></i> Url data</div>
		<div class="card-body text-center">

			<strong class="text-secondary">Url: </strong>
			<a target="_blank" href="<%= host %><%= saveUrl.path %>"><%= host %><%= saveUrl.path %></a>
			<br><br>
			<strong class="text-secondary">Views:</strong>
			<% if (saveUrl.views === '') { %> Unlimited
			<% } else { %> <%= saveUrl.views %> <% } %>
			<br>

			<strong class="text-secondary">Password:</strong>
			<% if (saveUrl.password === '') { %> none
			<% } else { %> yes <% } %>
			<br>

			<% if (saveUrl.path.includes( '-tmp' )) { %> <strong class="text-secondary">Type: </strong> Temporary
			<% } else { %> <strong class="text-secondary">User: </strong> <%= saveUrl.user %> <% } %>
			<br><br>

			<strong class="text-secondary">Url Path: </strong>
			<% if (saveUrl.url.includes( 'http' )) { %>
				<a target="_blank" href="<%= saveUrl.url %>"><%= saveUrl.url %></a>
			<% } else { %>
				<a target="_blank" href="http://<%= saveUrl.url %>"><%= saveUrl.url %></a>
			<% } %>
			<br>

			<img class="img-url" src="<%= saveUrl.qr %>" alt="<%= saveUrl.path %>">

		</div>
	</div>
</div>
