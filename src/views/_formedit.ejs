<div class="col-md-6 d-flex justify-content-center">
	<div class="card border-primary mt-3 w-100">
		<div class="card-header"><i class="fas fa-pencil-alt"></i> Edit Url</div>
		<div class="card-body text-primary">

			<% if (error !== '') { %>
				<div id="alerta" class="alert alert-danger alert-dismissible fade show" role="alert">
					<%= error %>
					<button id="closee" type="button" class="close">
					  <span aria-hidden="true">&times;</span>
					</button>
				  </div>
			<% } %>

			<form action="/edit/<%= data.id %>?_method=PUT" method="POST">
				<input type="hidden" name="_method" value="PUT">

				<div class="form-group">
					<input type="text" class="form-control" placeholder="Nick *" name="nick" value="<%= data.nick %>" readonly>
				</div>
				<div class="form-group">
					<input type="password" class="form-control" placeholder="Password *" name="password" value="<%= data.password %>" autofocus>
				</div>
				<hr>
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text"> <%= host %> </span>
					</div>
					<input type="text" class="form-control" aria-describedby="basic-addon3" placeholder="short_url" name="shortUrl" value="<%= data.shortUrl %>" readonly>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Destination Url *" name="destinationUrl" value="<%= data.destinationUrl %>" readonly>
				</div>
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<input type="checkbox" id="watch">
						</div>
					</div>
					<input type="text" class="form-control" id="passwordUrl" placeholder="Password Url" name="passwordUrl" value="<%= data.passwordUrl %>">
				</div>
				<div class="form-group">
					<input type="number" min="0" step="1" class="form-control" placeholder="Expire After Views" name="views" value="<%= data.views %>">
				</div>
				<div class="form-group">
					<button type="submit" class="form-control btn btn-primary">Validate</button>
				</div>
			</form>
		</div>
	</div>
</div>
